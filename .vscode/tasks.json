{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Full Build",
        "type": "shell",
        "command": "cmake -S . -B build && cmake --build build -j 12",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run Tests",
        "type": "shell",
        "command": "cmake -S . -B build && cmake --build build -j 12 && GTEST_COLOR=1 ctest --test-dir build --output-on-failure -j12",
        "group": {
          "kind": "build",
          "isDefault": false
        }
      }
    ]
  }
  